# å¤šé˜¶æ®µæ„å»º - Next.js åº”ç”¨
FROM node:20-alpine AS base

# å®‰è£…ä¾èµ–é˜¶æ®µ
FROM base AS deps
WORKDIR /app

# å¯ç”¨ pnpmï¼ˆæ¨èæŒ‡å®šç‰ˆæœ¬ï¼‰
RUN corepack enable && corepack prepare pnpm@10.21.0 --activate

# å¤åˆ¶ä¾èµ–æ–‡ä»¶
COPY package.json yarn.lock* package-lock.json* pnpm-lock.yaml* ./

# å®‰è£…ä¾èµ–
# RUN \
#   if [ -f yarn.lock ]; then yarn install --frozen-lockfile; \
#   elif [ -f package-lock.json ]; then npm ci; \
#   elif [ -f pnpm-lock.yaml ]; then corepack enable pnpm && pnpm install --frozen-lockfile; \
#   else echo "æ— æ³•æ‰¾åˆ°é”æ–‡ä»¶ï¼Œä½¿ç”¨ npm install" && npm install; \
#   fi

# ç›´æ¥ä½¿ç”¨ pnpm å®‰è£…ä¾èµ–
# RUN corepack enable pnpm \
#     && pnpm install --no-frozen-lockfile --network-concurrency=1

RUN --mount=type=cache,target=/root/.pnpm-store \
    pnpm install --no-frozen-lockfile --prefer-offline

# æ„å»ºé˜¶æ®µ
FROM base AS builder
WORKDIR /app

# å¤åˆ¶ä¾èµ–
COPY --from=deps /app/node_modules ./node_modules
# å¤åˆ¶æºä»£ç 
COPY . .

# è®¾ç½®ç¯å¢ƒå˜é‡ï¼ˆæ„å»ºæ—¶ï¼‰
# ğŸ‘‡ å£°æ˜å¯æ¥æ”¶çš„æ„å»ºå‚æ•°ï¼ˆæ¥è‡ª docker-compose build argsï¼‰
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_APP_URL

# ğŸ‘‡ å¯¼å…¥ä¸ºç¯å¢ƒå˜é‡ä¾› Next.js ä½¿ç”¨ï¼ˆå…³é”®ï¼‰
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}
ENV NEXT_PUBLIC_APP_URL=${NEXT_PUBLIC_APP_URL}
ENV NEXT_TELEMETRY_DISABLED=1

# æ„å»ºåº”ç”¨
# RUN \
#   if [ -f yarn.lock ]; then yarn build; \
#   elif [ -f package-lock.json ]; then npm run build; \
#   elif [ -f pnpm-lock.yaml ]; then pnpm build; \
#   else npm run build; \
#   fi

RUN corepack enable pnpm \
    && echo "ğŸš§ Building with NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}" \
    && pnpm build

# ç”Ÿäº§ç¯å¢ƒè¿è¡Œ
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1
ENV PORT=3100

# åˆ›å»ºé root ç”¨æˆ·
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# å¤åˆ¶å¿…è¦çš„æ–‡ä»¶
COPY --from=builder /app/public ./public

# è®¾ç½®æ­£ç¡®çš„æƒé™
RUN mkdir .next
RUN chown nextjs:nodejs .next

# è‡ªåŠ¨åˆ©ç”¨ Next.js standalone è¾“å‡º
COPY --from=builder --chown=nextjs:nodejs /app/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/.next/static ./.next/static

USER nextjs

EXPOSE 3100

# å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=3s --start-period=10s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3100', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# å¯åŠ¨å‘½ä»¤
CMD ["node", "server.js"]
